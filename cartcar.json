{
  "info": {
    "_postman_id": "YOUR_COLLECTION_ID_HERE",
    "name": "Car Wash Backend API - Car Brands",
    "description": "Postman collection for the Car Wash Backend API endpoints related to Car Brands.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET Brands",
      "description": "Public endpoints for retrieving car brand information.",
      "item": [
        {
          "name": "Get All Brands",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseURL}}/brands/",
              "host": ["{{baseURL}}"],
              "path": ["brands", ""]
            },
            "description": "Retrieves a list of all car brands."
          },
          "response": []
        },
        {
          "name": "Get Brand by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseURL}}/brands/:brandId",
              "host": ["{{baseURL}}"],
              "path": ["brands", ":brandId"],
              "variable": [
                {
                  "key": "brandId",
                  "value": "1",
                  "description": "Replace with an actual brand ID from your database."
                }
              ]
            },
            "description": "Retrieves a single car brand by its ID."
          },
          "response": []
        },
        {
          "name": "Get Brand with Cars",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseURL}}/brands/:brandId/cars",
              "host": ["{{baseURL}}"],
              "path": ["brands", ":brandId", "cars"],
              "variable": [
                {
                  "key": "brandId",
                  "value": "1",
                  "description": "Replace with an actual brand ID from your database."
                }
              ]
            },
            "description": "Retrieves a car brand along with all cars associated with it."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Protected Routes (Admin Only)",
      "description": "Endpoints requiring admin authentication.",
      "item": [
        {
          "name": "Create Brand",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text",
                "description": "JWT for an authenticated admin user. Obtain this from your login endpoint."
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "logo",
                  "type": "file",
                  "src": "/path/to/your/image.jpg",
                  "description": "Select an image file for the brand logo. In Postman, click 'Select Files'."
                },
                {
                  "key": "product_name",
                  "value": "Honda",
                  "type": "text",
                  "description": "The name of the car brand."
                },
                {
                  "key": "description",
                  "value": "A Japanese multinational conglomerate manufacturer of automobiles, motorcycles, and power equipment.",
                  "type": "text",
                  "description": "A brief description of the brand."
                }
              ]
            },
            "url": {
              "raw": "{{baseURL}}/brands/",
              "host": ["{{baseURL}}"],
              "path": ["brands", ""]
            },
            "description": "Creates a new car brand, requiring admin authentication and an uploaded logo."
          },
          "response": []
        },
        {
          "name": "Update Brand",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text",
                "description": "JWT for an authenticated admin user."
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "logo",
                  "type": "file",
                  "src": "/path/to/your/new_image.jpg",
                  "description": "(Optional) Select a new image file if you want to update the logo. In Postman, click 'Select Files'."
                },
                {
                  "key": "product_name",
                  "value": "Honda Motor Co. Ltd.",
                  "type": "text",
                  "description": "(Optional) The updated name of the car brand."
                },
                {
                  "key": "description",
                  "value": "Updated description for Honda.",
                  "type": "text",
                  "description": "(Optional) An updated description of the brand."
                }
              ]
            },
            "url": {
              "raw": "{{baseURL}}/brands/:brandId",
              "host": ["{{baseURL}}"],
              "path": ["brands", ":brandId"],
              "variable": [
                {
                  "key": "brandId",
                  "value": "1",
                  "description": "Replace with the ID of the brand to update."
                }
              ]
            },
            "description": "Updates an existing car brand by ID, requiring admin authentication. Uses multipart/form-data if logo is included."
          },
          "response": []
        },
        {
          "name": "Delete Brand",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text",
                "description": "JWT for an authenticated admin user."
              }
            ],
            "url": {
              "raw": "{{baseURL}}/brands/:brandId",
              "host": ["{{baseURL}}"],
              "path": ["brands", ":brandId"],
              "variable": [
                {
                  "key": "brandId",
                  "value": "1",
                  "description": "Replace with the ID of the brand to delete."
                }
              ]
            },
            "description": "Deletes a car brand by its ID, requiring admin authentication."
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseURL",
      "value": "http://localhost:3000",
      "type": "string",
      "description": "The base URL of your API (e.g., http://localhost:3000)."
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string",
      "description": "JWT token for an authenticated admin user. Obtain this from your login endpoint."
    }
  ]
}
