{
  "info": {
    "name": "Wash Type API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Public Routes",
      "item": [
        {
          "name": "Get All Wash Types",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/wash-types",
              "host": ["{{base_url}}"],
              "path": ["wash-types"]
            },
            "query": [
              { "key": "page", "value": "1" },
              { "key": "limit", "value": "10" },
              { "key": "min_price", "value": "0" },
              { "key": "max_price", "value": "100" }
            ]
          }
        },
        {
          "name": "Get Company Wash Types",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/companies/{{companyId}}/wash-types",
              "host": ["{{base_url}}"],
              "path": ["companies", "{{companyId}}", "wash-types"]
            },
            "query": [
              { "key": "page", "value": "1" },
              { "key": "limit", "value": "10" },
              { "key": "min_price", "value": "0" },
              { "key": "max_price", "value": "100" }
            ]
          }
        },
        {
          "name": "Get Popular Wash Types",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/wash-types/popular",
              "host": ["{{base_url}}"],
              "path": ["wash-types", "popular"]
            }
          }
        }
      ]
    },
    {
      "name": "Company Only Routes",
      "item": [
        {
          "name": "Add Wash Type",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/wash-types",
              "host": ["{{base_url}}"],
              "path": ["wash-types"]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": {
                "name": "Deluxe Wash",
                "price": 25,
                "description": "Premium car wash service"
              }
            },
            "description": "Requires valid JWT token of a company user"
          }
        },
        {
          "name": "Update Wash Type",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{base_url}}/wash-types/{{typeId}}",
              "host": ["{{base_url}}"],
              "path": ["wash-types", "{{typeId}}"]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": {
                "name": "Updated Name",
                "price": 30,
                "description": "Updated description"
              }
            },
            "description": "At least one field must be provided."
          }
        },
        {
          "name": "Delete Wash Type",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/wash-types/{{typeId}}",
              "host": ["{{base_url}}"],
              "path": ["wash-types", "{{typeId}}"]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ]
          }
        }
      ]
    }
  ]
}
